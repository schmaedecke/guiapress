<div class="container">
  <hr />
  <div class="card mt-4">
    <div class="card-header">
      <h2>Login de admin</h2>
    </div>
    <div class="card-body">
      <form action="/authenticate" method="POST">
        <input
          class="form-control"
          type="email"
          name="email"
          placeholder="email@exemplo.com"
        /><br />
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="**********"
        />
        <br />
        <div class="d-grid">
          <button type="submit" class="btn btn-success btn-block">Logar</button>
        </div>
      </form>
    </div>
  </div>
</div>

